<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test-specific console appender with simplified pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [traceId=%X{traceId:-} spanId=%X{spanId:-} correlationId=%X{correlationId:-}] %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- File appender for detailed trace analysis -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test-logs.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [traceId=%X{traceId:-} spanId=%X{spanId:-} correlationId=%X{correlationId:-}] %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- Root logger for tests - INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- PeeGeeQ Outbox specific loggers -->
    <logger name="dev.mars.peegeeq.outbox" level="INFO" />

    <!-- For distributed tracing test, we want to see INFO logs from OutboxConsumer -->
    <logger name="dev.mars.peegeeq.outbox.OutboxConsumer" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Suppress filter exception warnings from OutboxConsumerGroupMember during tests -->
    <!-- This prevents confusing WARN logs with stack traces during intentional filter failure tests -->
    <logger name="dev.mars.peegeeq.outbox.OutboxConsumerGroupMember" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Reduce TestContainers noise -->
    <logger name="org.testcontainers" level="WARN" />
    <logger name="com.github.dockerjava" level="WARN" />
    <logger name="tc" level="WARN" />
    
    <!-- Reduce Vert.x noise -->
    <logger name="io.vertx" level="WARN" />
    
    <!-- Reduce Hikari connection pool noise -->
    <logger name="com.zaxxer.hikari" level="WARN" />
</configuration>
