{
  "name": "peegeeq-management-ui",
  "version": "1.0.0",
  "description": "PeeGeeQ Management Console - Web-based administration interface",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/tests/integration",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:e2e:direct": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:interactions": "playwright test src/tests/e2e/ui-interactions.spec.ts",
    "test:e2e:data": "playwright test src/tests/e2e/data-validation.spec.ts",
    "test:e2e:visual": "playwright test src/tests/e2e/visual-regression.spec.ts",
    "test:e2e:visual:update": "playwright test src/tests/e2e/visual-regression.spec.ts --update-snapshots",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:full-system": "node scripts/test-full-system.js",
    "test:full-system:manual": "playwright test src/tests/e2e/full-system-test.spec.ts --headed",
    "test:all": "npm run test:run && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:run && npm run test:integration && npm run test:e2e --reporter=junit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.10.1",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.0",
    "recharts": "^3.1.2",
    "zod": "^4.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testcontainers/postgresql": "^11.11.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "pg": "^8.16.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "peegeeq",
    "message-queue",
    "management",
    "admin-console",
    "react",
    "typescript"
  ],
  "author": "Mark Andrew Ray-Smith Cityline Ltd",
  "license": "MIT"
}
