<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>peegeeq</artifactId>
    <groupId>dev.mars</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>peegeeq-migrations</artifactId>
  <name>PeeGeeQ Migrations</name>
  <description>Database migration scripts for PeeGeeQ - NOT included in application runtime</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>21</source>
          <target>21</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>dev.mars.peegeeq.migrations.RunMigrations</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <finalName>peegeeq-migrations</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.flywaydb</groupId>
        <artifactId>flyway-maven-plugin</artifactId>
        <version>${flyway.version}</version>
        <dependencies>
          <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>${postgresql.version}</version>
          </dependency>
          <dependency>
            <groupId>org.flywaydb</groupId>
            <artifactId>flyway-database-postgresql</artifactId>
            <version>${flyway.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <locations>
            <location>filesystem:src/main/resources/db/migration</location>
          </locations>
          <url>${flyway.url}</url>
          <user>${flyway.user}</user>
          <password>${flyway.password}</password>
          <baselineOnMigrate>true</baselineOnMigrate>
          <outOfOrder>false</outOfOrder>
          <validateOnMigrate>true</validateOnMigrate>
          <cleanDisabled>true</cleanDisabled>
          <mixed>true</mixed>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>local</id>
      <properties>
        <flyway.user>peegeeq_dev</flyway.user>
        <flyway.url>jdbc:postgresql://localhost:5432/peegeeq_dev</flyway.url>
        <flyway.password>peegeeq_dev</flyway.password>
      </properties>
    </profile>
    <profile>
      <id>test</id>
      <properties>
        <flyway.user>peegeeq_test</flyway.user>
        <flyway.url>jdbc:postgresql://localhost:5432/peegeeq_test</flyway.url>
        <flyway.password>peegeeq_test</flyway.password>
      </properties>
    </profile>
    <profile>
      <id>production</id>
      <properties>
        <flyway.user>${env.DB_USER}</flyway.user>
        <flyway.url>${env.DB_URL}</flyway.url>
        <flyway.password>${env.DB_PASSWORD}</flyway.password>
      </properties>
    </profile>
  </profiles>
  <properties>
    <flyway.version>10.10.0</flyway.version>
    <postgresql.version>42.7.2</postgresql.version>
  </properties>
</project>
