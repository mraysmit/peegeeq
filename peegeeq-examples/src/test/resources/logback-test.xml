<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="vxTrace" 
                    converterClass="dev.mars.peegeeq.api.logging.VertxTraceIdConverter" />
    <conversionRule conversionWord="vxSpan" 
                    converterClass="dev.mars.peegeeq.api.logging.VertxSpanIdConverter" />

    <!-- Test-specific console appender with simplified pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [trace=%vxTrace span=%vxSpan] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger for tests - INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- PeeGeeQ Examples specific loggers -->
    <logger name="dev.mars.peegeeq.examples" level="INFO" />
    <logger name="dev.mars.peegeeq" level="WARN" />

    <!-- Suppress filter exception warnings from OutboxConsumerGroupMember during tests -->
    <!-- This prevents confusing WARN logs with stack traces during intentional filter failure tests -->
    <logger name="dev.mars.peegeeq.outbox.OutboxConsumerGroupMember" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Reduce TestContainers noise -->
    <logger name="org.testcontainers" level="WARN" />
    <logger name="com.github.dockerjava" level="WARN" />
    <logger name="tc" level="WARN" />
    
    <!-- Reduce Vert.x noise -->
    <logger name="io.vertx" level="WARN" />
    
    <!-- Reduce Hikari connection pool noise -->
    <logger name="com.zaxxer.hikari" level="WARN" />
</configuration>

