<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Production logging configuration for PeeGeeQ DB module -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/peegeeq-db.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/peegeeq-db-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- PeeGeeQ DB module specific loggers -->
    <!--
    Debug logging control for PeeGeeQ DB components:
    - Set to DEBUG to see detailed database operation logging
    - Set to INFO to see only important database events
    - Set to WARN to minimize database logging
    -->
    <logger name="dev.mars.peegeeq.db" level="DEBUG" />

    <!-- Specific DB component loggers for fine-grained control -->
    <logger name="dev.mars.peegeeq.db.PeeGeeQManager" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.provider.PgConnectionProvider" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.provider.PgDatabaseService" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.provider.PgQueueFactoryProvider" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.migration.SchemaMigrationManager" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.connection.PgConnectionManager" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.transaction.PgTransactionManager" level="DEBUG" />

    <!-- Reduce noise from dependencies -->
    <logger name="com.zaxxer.hikari" level="INFO" />
    <logger name="org.postgresql" level="INFO" />
</configuration>
