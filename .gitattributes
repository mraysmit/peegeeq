# Set default behavior to automatically normalize line endings
* text=auto

# Java source files
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.adoc text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.vue text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# SQL files
*.sql text eol=lf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Exclude files from export-ignore (for git archive)
.gitignore export-ignore
.gitattributes export-ignore
.github/ export-ignore
*.md export-ignore
docs/ export-ignore
