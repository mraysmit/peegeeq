<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test-specific console appender with simplified pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger for tests - WARN level to minimize noise -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- PeeGeeQ API specific loggers -->
    <logger name="dev.mars.peegeeq.api" level="INFO" />
    
    <!-- Reduce TestContainers noise -->
    <logger name="org.testcontainers" level="WARN" />
    <logger name="com.github.dockerjava" level="WARN" />
    <logger name="tc" level="WARN" />
</configuration>
