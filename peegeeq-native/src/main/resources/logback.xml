<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Production logging configuration for PeeGeeQ Native module -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/peegeeq-native.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/peegeeq-native-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- PeeGeeQ Native module specific loggers -->
    <logger name="dev.mars.peegeeq.pgqueue" level="DEBUG" />

    <!--
    DEBUG LOGGING CONTROL FOR NATIVE QUEUE COMPONENTS
    =================================================

    The following loggers control detailed debug output for native queue operations:

    - PgNativeQueueConsumer: Consumer subscription, message processing, LISTEN/NOTIFY
    - PgNativeQueueFactory: Factory creation and consumer instantiation
    - PgQueueFactoryProvider: Factory registration and provider initialization

    Set level to:
    - DEBUG: Show detailed debug logs with NATIVE-DEBUG/FACTORY-DEBUG prefixes
    - INFO:  Hide debug logs, show only standard INFO/WARN/ERROR messages

    For production environments, consider setting these to INFO to reduce log volume.
    -->
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeQueueConsumer" level="DEBUG" />
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeQueueFactory" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.provider.PgQueueFactoryProvider" level="DEBUG" />

    <!-- Reduce noise from dependencies -->
    <logger name="io.vertx" level="INFO" />
    <logger name="com.zaxxer.hikari" level="INFO" />
</configuration>
