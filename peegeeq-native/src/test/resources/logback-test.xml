<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test-specific console appender with simplified pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [traceId=%X{traceId:-} spanId=%X{spanId:-} correlationId=%X{correlationId:-}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger for tests - INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- PeeGeeQ Native specific loggers -->
    <logger name="dev.mars.peegeeq.pgqueue" level="WARN" />

    <!--
    DEBUG LOGGING CONTROL FOR NATIVE QUEUE COMPONENTS
    =================================================

    The following loggers control detailed debug output for native queue operations:

    - PgNativeQueueConsumer: Consumer subscription, message processing, LISTEN/NOTIFY
    - PgNativeQueueFactory: Factory creation and consumer instantiation
    - PgQueueFactoryProvider: Factory registration and provider initialization
    - NativeQueueIntegrationTest: Test-specific debug output

    Set level to:
    - DEBUG: Show detailed debug logs with NATIVE-DEBUG/FACTORY-DEBUG prefixes
    - INFO:  Hide debug logs, show only standard INFO/WARN/ERROR messages
    -->
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeQueueConsumer" level="DEBUG" />
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeQueueFactory" level="DEBUG" />
    <logger name="dev.mars.peegeeq.db.provider.PgQueueFactoryProvider" level="DEBUG" />
    <logger name="dev.mars.peegeeq.pgqueue.NativeQueueIntegrationTest" level="DEBUG" />

    <!-- Suppress intentional test error stack traces from PgNotificationStream -->
    <!-- This prevents confusing error logs during intentional failure tests -->
    <logger name="dev.mars.peegeeq.pgqueue.PgNotificationStream" level="OFF" />
    
    <!-- Reduce TestContainers noise -->
    <logger name="org.testcontainers" level="WARN" />
    <logger name="com.github.dockerjava" level="WARN" />
    <logger name="tc" level="WARN" />
    
    <!-- Reduce Vert.x noise -->
    <logger name="io.vertx" level="WARN" />
    
    <!-- Reduce Hikari connection pool noise -->
    <logger name="com.zaxxer.hikari" level="WARN" />

    <!-- Suppress intentional test failure warnings from native queue classes during tests -->
    <!-- This prevents confusing WARN logs with stack traces during intentional failure tests -->
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeConsumerGroupMember" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="dev.mars.peegeeq.pgqueue.PgNativeConsumer" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>
